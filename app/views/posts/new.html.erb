<h2>Add new post</h2>
<%= simple_form_for :post, url: posts_path do |f| %>
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>
<% end %>
  <p>
    <%= f.input :title, label: "Post name:", input_html:{class:'form-control'} %>
  </p>
  <p>
    <%= f.input :body, as: :text, label: "Post text:", input_html:{class:'form-control'} %>
  </p>
  <p>
    <%= f.button :submit, "Save post", class:'btn btn-success'%>
  </p>
<% end %>
